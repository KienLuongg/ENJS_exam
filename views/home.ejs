<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("head.ejs") %>
</head>
<body>
    <div class="container">
        <a class="col" href="#">Home</a> |
        <a class="col" href="/users/create">Add new user</a> |
        <a class="col" href="/users/list">All users list</a>
    </div>
    <br>
    <div class="container">
        <h1>User list</h1>
    </div>
    <section>
        <div class="container">
            <table class="table">
                <thead>
                    <th>Fisrt Name</th>
                    <th>Last Name</th>
                    <th>Mobile</th>
                </thead>
                <tbody>
                    <% user.forEach(e=>{ %>
                        <tr>
                            <td><%= e.fisrtName %></td>
                            <td><%= e.lastName %></td>
                            <td><%= e.mobile %></td>
                        </tr>    
                   <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>